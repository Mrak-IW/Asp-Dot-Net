@using HomeWorkSmartHouse.SmartHouseDir.Interfaces;
@model ISmartDevice
@{ 
	IBrightable device = Model as IBrightable;
}

@if (device != null)
{
	<div interface="IBrightable">
		<a href="/Home/AdjustBrightness/@Model.Name/down" title="Min = @device.BrightnessMin" class="btnArrow btnDecrease"></a>
		<span class="value">@device.Brightness</span>
		<a href="/Home/AdjustBrightness/@Model.Name/up" title="Max = @device.BrightnessMax" class="btnArrow btnIncrease"></a>
		<span>Яркость</span>
	</div>
}
